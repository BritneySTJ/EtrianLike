<?xml version="1.0" encoding="utf-8"?>
<View>

	<Panel Name="PlayerPanel" Style="TechWindow" Anchor="$CenterX,$CenterY" Bounds="Bind PlayerWindow" InnerMargin="8,16,8,8" TransitionIn="Expand" TransitionOut="Shrink">
		<DataGrid Items="Bind PlayerProfile.Party" Scrolling="False" Alignment="Stretch">
			<Panel Alignment="Vertical" Bounds="0,0,102,120">
				<Scenes.BattleScene.BattlePlayer HeroModel="Bind DataGrid" Alignment="Center"/>
				<Label Text="Bind DataGrid.Name" Font="Bind PlayerProfile.Font" Color="Bind DataGrid.NameColor" Alignment="Cascading" TextAlignment="Left" Bounds="10,-6,0,20"/>
				<Label Text="Bind DataGrid.Health" Font="Dialogue" Color="Bind DataGrid.HealthColor" Alignment="Left" TextAlignment="Right" Bounds="90,-9,0,20"/>
				<Label Text="/" Font="Dialogue" Color="Bind DataGrid.HealthColor" Alignment="Left" TextAlignment="Left" Bounds="0,-6,5,20"/>
				<Label Text="Bind DataGrid.MaxHealth" Font="Dialogue" Color="Bind DataGrid.HealthColor" Alignment="Left" TextAlignment="Left" Bounds="-1,-3,0,20"/>
			</Panel>
		</DataGrid>
	</Panel>

	<Panel Name="EnemyPanel" Anchor="$CenterX,$CenterY" Bounds="Bind EnemyWindow" InnerMargin="4,3,4,3" TransitionIn="Expand" TransitionOut="Shrink">
		<DataGrid Items="Ref InitialEnemies" Alignment="Stretch" InnerMargin="Bind EnemyMargin">
			<Scenes.BattleScene.BattleEnemy EnemyRecord="Ref DataGrid" Alignment="Horizontal"/>
		</DataGrid>
	</Panel>

	<Panel Name="BattlePanel" Style="Windows_GamePanel" Anchor="$CenterX,$CenterY" Bounds="-345,160,690,100" InnerMargin="16,18,16,18" TransitionIn="Expand" TransitionOut="Shrink">

	</Panel>
	
</View>